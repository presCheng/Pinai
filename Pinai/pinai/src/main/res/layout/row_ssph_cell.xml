<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/verify"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/v" />

    <TextView
        android:id="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="学校学校学校"
        android:textColor="@color/ggray"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/nickname"
        android:layout_alignStart="@+id/nickname" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/sex"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/portrait"
        android:layout_toRightOf="@+id/portrait"
        android:text="名字名字名字"
        android:textColor="@color/gblack" />

    <ImageView
        android:id="@+id/sex"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/nickname"
        android:layout_toRightOf="@+id/nickname"
        android:background="@drawable/big_boy" />

    <TextView
        android:id="@+id/pazs"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:background="@drawable/pazs_1"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/sex"
        android:layout_toEndOf="@+id/sex"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/ppppp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>