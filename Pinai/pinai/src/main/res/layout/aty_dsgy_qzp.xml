<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!--<include layout="@layout/playout" />-->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background_pink">

        <TextView
            android:id="@+id/bbs_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/dsgy_bbs_ret"
            android:layout_alignBottom="@+id/dsgy_bbs_ret"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="发布招聘"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <include
            android:id="@+id/dsgy_bbs_ret"
            layout="@layout/commom_back_btn_white"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="标题"

                android:textColor="@color/background_pink"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edit_frame"
                android:gravity="top|start"
                android:hint="大学不想给自己留下遗憾"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="@color/grayfont"
                android:textColorHint="@color/grayfont"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="招聘词"
                android:textColor="@color/background_pink"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edit_frame"
                android:gravity="top|start"
                android:hint="@string/qzp_zhaopinci"
                android:padding="3dp"
                android:textColor="@color/grayfont"
                android:textColorHint="@color/grayfont"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="招聘要求"
                android:textColor="@color/background_pink"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. "
                    android:textColor="@color/background_pink"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/rule_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_frame"
                    android:gravity="top|start"
                    android:hint="对我好，脾气好"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textColor="@color/ggray"
                    android:textColorHint="@color/grayfont"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. "
                    android:textColor="@color/background_pink"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/rule_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_frame"
                    android:gravity="top|start"
                    android:hint="对我的一些缺点能够包容"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textColor="@color/ggray"
                    android:textColorHint="@color/grayfont"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. "
                    android:textColor="@color/background_pink"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/rule_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_frame"
                    android:gravity="top|start"
                    android:hint="选填"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textColor="@color/ggray"
                    android:textColorHint="@color/grayfont"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. "
                    android:textColor="@color/background_pink"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/rule_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_frame"
                    android:gravity="top|start"
                    android:hint="选填"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textColor="@color/ggray"
                    android:textColorHint="@color/grayfont"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. "
                    android:textColor="@color/background_pink"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/rule_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_frame"
                    android:gravity="top|start"
                    android:hint="选填"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textColor="@color/ggray"
                    android:textColorHint="@color/grayfont"
                    android:textSize="18sp" />
            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="100dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_qzp"
                    android:onClick="postNews"
                    android:text="发布"

                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/qzp_jl" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>