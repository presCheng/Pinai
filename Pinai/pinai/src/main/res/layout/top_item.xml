<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/bg_top_item"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ding"
            android:padding="3dp"
            android:textColor="@color/background_pink"
            android:id="@+id/textView6" />

        <TextView
            android:id="@+id/top_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gblack"
            android:textSize="18sp"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView6" />

        <TextView
            android:id="@+id/top_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/count"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:textSize="10sp"
            android:textColor="@color/background_pink"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/content"
        android:lines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ggray" />
</LinearLayout>