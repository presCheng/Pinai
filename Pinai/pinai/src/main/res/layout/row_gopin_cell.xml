<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/verify"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/v" />

    <TextView
        android:id="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="学校学校学校"
        android:textColor="@color/ggray"
        android:layout_above="@+id/linearLayout2"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/nickname"
        android:layout_alignStart="@+id/nickname" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="名字名字名字"
        android:layout_marginTop="5dp"
        android:textColor="@color/gblack"
        android:layout_toRightOf="@+id/portrait"
        android:layout_toEndOf="@+id/portrait" />

    <ImageView
        android:id="@+id/sex"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/big_boy"
        android:layout_alignTop="@+id/nickname"
        android:layout_toRightOf="@+id/nickname"
        android:layout_toEndOf="@+id/nickname" />

    <TextView
        android:id="@+id/pazs"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/pazs_1"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_alignTop="@+id/sex"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/school"
        android:layout_alignStart="@+id/school"
        android:layout_below="@+id/portrait"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/biaoqian_1"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:background="@drawable/bq_1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"

            android:text="萌萌哒"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/biaoqian_2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bq_2"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="5dp"
            android:text="可爱哒dada"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>
</RelativeLayout>