<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/comment_bar_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/background_pink">

        <include layout="@layout/commom_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="基本设置"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_bar_top"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊天消息通知震动"
            android:textColor="@color/grid_state_focused"
            android:textSize="20dp" />

        <ToggleButton
            android:id="@+id/toggle1"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/toggle_selector"
            android:checked="true"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/r1"
        android:background="@color/grayfont" />


    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊天消息通知声音"
            android:textColor="@color/grid_state_focused"
            android:textSize="20dp" />

        <ToggleButton
            android:id="@+id/toggle2"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/toggle_selector"
            android:checked="true"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/r2"
        android:background="@color/grayfont" />

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v3"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用扬声器播放语音"
            android:textColor="@color/grid_state_focused"
            android:textSize="20dp" />

        <ToggleButton
            android:id="@+id/toggle3"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/toggle_selector"
            android:checked="true"
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>
    <View
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/r3"
        android:background="@color/grayfont" />
    <Button
        android:text="退出登录"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:layout_margin="20dp"
        android:onClick="exit"
        android:textColor="@color/white"
        android:layout_below="@+id/v4"
        android:background="@drawable/bg_btn_eidt"
        android:layout_centerHorizontal="true" />

</RelativeLayout>