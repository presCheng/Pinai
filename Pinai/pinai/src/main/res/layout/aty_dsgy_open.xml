<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/linear_line2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/content"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:layout_below="@+id/top_bar"
        android:background="@color/background_blue"
        android:gravity="center_vertical"
        android:layout_marginTop="61dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/radio_image_white" />
    <ImageView
        android:id="@+id/jl"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_below="@+id/top_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="381dp"
        android:src="@drawable/open_jl" />
    <include layout="@layout/playout"/>
    <RelativeLayout
        android:id="@+id/top_bar"
        android:background="@color/linear_line"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/dsgy_bbs_ret"
            android:layout_alignBottom="@+id/dsgy_bbs_ret"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <include
            android:id="@+id/dsgy_bbs_ret"
            layout="@layout/commom_back_btn_white"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>