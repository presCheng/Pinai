<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:state_enabled="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/background_pink"/>
            <size android:width="21dp"
                android:height="21dp"/>
        </shape>
    </item>
    <item  android:state_checked="true" android:state_enabled="true" >
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/background_pink"/>
            <stroke
                android:width="1dp"
                android:color="@color/voip_interface_text_color"/>
            <size android:width="21dp"
                android:height="21dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/background_pink"/>
            <size android:width="21dp"
                android:height="21dp"/>
        </shape>
    </item>
</selector>
